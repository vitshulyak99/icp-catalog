@model global::Collections.Models.Collection.CollectionEditViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form method="post" asp-action="EditPost">
    <input asp-for="Id" hidden/>
    <div class="form-group">
        <label for="title">title</label>
        <input asp-for="Title" type="text" class="form-control">
    </div>
    <div class="form-group">

        <label class="title" for="theme"> Theme </label>
        <select name="theme" class="form-control" id="theme">
            @foreach (var theme in Model.Themes.Select(x => new {Selected = x.Id.Equals(Model.Theme.Id), x.Id, x.Name}))
            {
                <option selected="@theme.Selected" value="@theme.Id"> @theme.Name </option>
            }
        </select>
    </div>
    <partial model="@Model.Image" name="Collection/_ImageWithPrev"/>
    <partial model="@Model.Description" name="_DescriptionMarkdownInput"/>

    <div class=" form-group">
        <button type="submit" class="btn btn-primary mr-2 ">Submit</button>
        <a asp-action="Details" asp-controller="Collection" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>
