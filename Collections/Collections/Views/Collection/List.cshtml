@model List<Collections.Models.Collection.CollectionSimpleModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col">
        <a class=" ml-1" asp-controller="Collection" asp-action="Create">Create</a>
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="align-content-center">
        <span> No collections</span>
    </div>
}
else
{
    
    <div class="d-flex">
        @foreach (var m in Model)
        {
            <partial name="Collection/_CollectionSimpleLine" model="m" />
        }
    </div>

}