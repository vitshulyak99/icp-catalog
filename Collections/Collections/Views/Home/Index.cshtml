@using Collections.Extensions
@using Collections.Models.Item
@model Collections.Models.HomeIndexViewModel
@{
    Layout = "_Layout";
}


<div class="row">
    <div class="col-2">
        <b>Tags: </b>
            <p class="d-flex flex-wrap">
                @foreach (var tag in Model.Tags)
                {
                    <a id="@tag.Id" class="tag badge @TagModel.RandomBadgeStyleClass p-1 ml-1 mb-1">@tag.Name</a>
                }
            </p>
    </div>

    <div class="col">
        <div>
            <div id="lastItems">
                @if (@Model.LastItems.Length < 1)
                {
                    <p>No last items</p>
                }
                else
                {
                    <table class="table">
                        <thead>
                        <tr>
                            <td>Name</td>
                            <td>Tags</td>
                            <td></td>
                            <td></td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.LastItems)
                        {
                            <tr>
                                <td> @item.Name</td>
                                <td>
                                    @foreach (var tag in item.Tags)
                                    {
                                        <a id="@tag.Id" class="tag badge @(TagModel.RandomBadgeStyleClass) p-1 ml-1 mb-1">@tag.Name</a>
                                    }
                                </td>
                                <td>
                                    <partial name="_LikeBadge" model="(item.Likes.Contains(User.GetNameIdentifier()),item.Likes.Count)" />
                                </td>
                                <td>
                                    <a asp-action="Details" asp-controller="Item" asp-route-id="@item.Id">More >></a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
            <div id="top-10-collections">
                <h3>Top 10 collections by number of items</h3>
                @if (Model.TopCollections.Length < 1)
                {
                    <p>
                        No Collections
                    </p>
                }
                else
                {
                    <div class="d-flex flex-wrap">
                        @foreach (var c in Model.TopCollections)
                        {
                            <partial name="Collection/_CollectionSimpleCard" model="c" />
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
</script>